<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jjcadiz.appbiva"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="24" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_abiva"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.jjcadiz.appbiva.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jjcadiz.appbiva.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jjcadiz.appbiva.IntroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.jjcadiz.appbiva.ParentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.jjcadiz.appbiva.StudentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.jjcadiz.appbiva.TeacherActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>